<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Roast My Resume</title>
    
    <link rel="icon" href="/images/RMR.jpg">
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/home/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/bootstrap/home/css/small-business.css" rel="stylesheet">
    
  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/api/Resumes">Roast My Resume</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <!--<li class="nav-item active">
              <a class="nav-link" href="">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>-->
            <% if (user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/api/Resumes/MyResumes/<%= user.username %>">My Resumes </a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/api/users/logout">Logout</a>
                </li>
             <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/api/users/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/users/new">Sign Up</a>
              </li>
            <% }%>
          </ul>
        </div>
      </div>
    </nav>


<br>
    <!-- Page Content -->
    <div class="container">
           
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 col-md-offset-4">

                    <div class="centerText panel panel-default">
                        <div class="panel-body"></div>
                            <h1 style="text-align: center">Post your Resume</h1>
                            <hr>
                            <form action="/api/Resumes" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="name" id="name" placeholder="Resume Name" required>
                                </div>
                                <div class="form-group">
                                        <select type="text" name="type" class="form-control">
                                            <option value="Software">Software</option> 
                                            <option value="Accounting">Accounting</option>
                                            <option value="Arts">Arts</option>
                                            <option value="Architecture">Architecture</option>
                                            <option value="Economics">Economics</option>
                                            <option value="Engineering">Engineering</option>
                                            <option value="Finance">Finance</option> 
                                            <option value="Kinesiology">Kinesiology</option>
                                            <option value="Math">Math</option>
                                            <option value="Others">Others</option>
                                            <option value="Science">Science</option>
                                            
                                        </select>
                                </div>
                                <div class="form-group">
                                    <textarea rows="5" cols="50"class="form-control" name="desc" id="desc" placeholder="description" required></textarea>
                                </div>
                                <div class="form-group">
                                    <label class="btn btn-info">
                                        Upload Resume (Required)<input type="file" id="resumePDF" name="image"  style="display: none;" onchange="$('#upload-info').html(this.files[0].name)" required>
                                    </label>
                                    <span class='label label-info' id="upload-info"></span>
                                </div>
                                <div class="form-group">
                                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                                </div>
                            </form>
                          
                        </div>
                    </div>           
              </div>
            </div>

    </div>
    <!-- /.container -->


    <!-- Bootstrap core JavaScript -->
    <script src="/bootstrap/home/vendor/jquery/jquery.min.js"></script>
    <script src="/bootstrap/home/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
