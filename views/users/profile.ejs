<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Roast My Resume</title>
    
    <link rel="icon" href="/images/RMR.jpg">
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/home/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <script src="https://use.fontawesome.com/58b9791761.js"></script>
    <!-- Custom styles for this template -->
    <link href="/bootstrap/home/css/small-business.css" rel="stylesheet">
    
  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="http://localhost:5000/api/Resumes">Roast My Resume</a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">

            <% if (user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/api/Resumes/MyResumes/<%= user.username %>">My Resumes </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/api/users/logout">Logout</a>
                  </li>
            <% } else { %>
                <li class="nav-item">
                  <a class="nav-link" href="/api/users/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/api/users/new">Sign Up</a>
                </li>
              <% }%>
          </ul>
        </div>
      </div>
    </nav>


<br>  
    <!-- Page Content -->
    <div class="container">
      <!-- Call to Action Well -->
      
      <div class="card text-white bg-secondary my-4 text-center">
        <div class="card-body">
          <p class="text-white m-0" ><%= user.username %>'s Resumes </p>
        </div>
      </div>
      
      <!-- Content Row -->
      <div class="row">
            <% resumes.forEach(function(resume){ %>
                <div class="col-md-4 mb-4">
                        <div class="card h-100">
                          <div class="card-body">
                            <h2 class="card-title">
                                <a href="http://localhost:5000/api/Resumes/<%= resume._id %>"style="color:black; font-weight: 420;"><%= resume.name %></a>  
                            </h2>  
                            <p class="card-text"><%= resume.type %></p>
                            <p class="card-text"><%= resume.resume %></p>
                          </div>
                          <div class="card-footer">
                            <a href="http://localhost:5000/api/Resumes/<%= resume._id %>" class="btn btn-primary">More Info</a>
                          </div>
                        </div>
                      </div>
                      <!-- /.col-md-4 -->
                <br></br>
            <% }); %>   
            
      </div>
      <!-- /.row -->
      <a class="btn btn-primary btn-lg " href="/api/Resumes/new">Add a Resume</a>
    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-2 bg-dark fixed-bottom ">
      <div class="container">
          <div class="text-center col-md-12 col-md-offset-4">
            <a href="https://github.com/AidanHa/Roast-My-Resume" target="_blank">
              <i class="fa fa-github" aria-hidden="true" style="color: white; font-size: 40px;"></i>
            </a>
      </div>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/bootstrap/home/vendor/jquery/jquery.min.js"></script>
    <script src="/bootstrap/home/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
