<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Trending Trades</title>
    
    <link rel="icon" href="/images/logo.jpg">
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/home/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/bootstrap/home/css/small-business.css" rel="stylesheet">
    
  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/api/Trades">Trending Trades</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/api/users/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/users/new">Sign Up</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>


<br>
    <!-- Page Content -->
    <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                 <div class="col-md-4 col-md-offset-4">
                    <div class="centerText panel panel-default">
                        <div class="panel-body">
                            
                            <h1 style="text-align: center">Login</h1>
                            <hr>
                            <div id="headerPadding"></div>
                            <div class="container">
                                <% if(error && error.length > 0) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= error %>
                                    </div>
                                <% } %>
                                <% if(success_msg && success_msg.length > 0) { %>
                                    <div class="alert alert-success" role="alert">
                                        <%= success_msg %>
                                    </div>
                                <% } %>
                            </div>
                            <form action="/api/users/login" method="POST">
                                <div class="form-group">
                                    <input cols="50"class="form-control" name="username" id="username" placeholder="Username" required></textarea>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="password" name="password" id="password" placeholder="Password" required>
                                </div>
                                <div class="form-group">
                                        <button class="btn btn-lg btn-primary btn-block">Login</button>
                                </div>
                            </form>
                            <br>
                            <h4 style="text-align: center">Not a user?</h1>
                            <a class="btn btn-lg  btn-block" href="/api/users/new">Sign Up!</a>
                        </div>
                    </div>
                </div>
              </div>

    </div>
    <!-- /.container -->


    <!-- Bootstrap core JavaScript -->
    <script src="/bootstrap/home/vendor/jquery/jquery.min.js"></script>
    <script src="/bootstrap/home/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
